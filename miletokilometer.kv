BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        BoxLayout:
            TextInput:
                id: input_miles
                text: '1'
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Up'
                    on_press: app.handle_increment(1)
                Button:
                    text: 'Down'
                    on_press: app.handle_increment(-1)
    BoxLayout:
        Button:
            text: 'Convert m to km'
            on_press: app.handle_calculate()
    Label:
        text: '1.60934'
        id: output_label
