BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        Button:
            text: 'Clear'
            on_press: app.handle_clear()
            size_hint_x: 1
        TextInput:
            id: input_name
            text: ''
            size_hint_x: 4
            color: (20,1,1,5)
            background_color: 1,50,1,5


    BoxLayout:
        Button:
            text: 'Greet'
            on_press: app.handle_greet()
            size_hint_x: 1
        Label:
            text: 'Enter your name'
            color: (50,25,75,1)
            id: output_label
            size_hint_x: 4
            background_color: 50,50,100,20